%h1 Listing annonces

%table
  %tr
    %th Title
    %th Date
    %th Body
    %th Notification
    %th
    %th
    %th
    %th

  - @annonces.each do |annonce|
    %tr
      %td= annonce.title
      %td= annonce.date
      %td= annonce.body
      %td= annonce.notification
      %td=image_tag annonce.image
      %td= link_to 'Показать', annonce
      %td= link_to 'Редактировать', edit_annonce_path(annonce)
      %td= link_to 'Удалить', annonce, :method => :delete, :data => { :confirm => 'Are you sure?' }

