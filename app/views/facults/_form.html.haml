= form_for @facult do |f|
  - if @facult.errors.any?
    #error_explanation
      %h2= "#{pluralize(@facult.errors.count, "error")} prohibited this facult from being saved:"
      %ul
        - @facult.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :info
    = f.text_area :info
  .actions
    = f.submit 'Save'
