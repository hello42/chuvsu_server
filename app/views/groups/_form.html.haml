= simple_form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  = f.input :facult_id, as: :select, collection: Facult.all, :include_blank => false
  = f.input :name
  %p
    = f.button :submit
