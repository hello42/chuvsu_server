.row
  .span6
    = form_for @subject do |f|
      - if @subject.errors.any?
        #error_explanation
          %h2= "#{pluralize(@subject.errors.count, "error")} prohibited this subject from being saved:"
          %ul
            - @subject.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :name
        = f.text_field :name
      .field
        = f.label :day, "День недели: "
        = f.select :day, [ ["Пн",1], [ "Вт",2], ["Ср", 3], ["Чт", 4], [ "Пт", 5], ["Сб", 6]]
      .field
        = f.label :number, "Номер пары: "
        = f.select :number, (1..8)
      .field
        = f.label :star
        = f.select "star", [ ["*", 1], ["**", 2] ]
      .field
        = f.label :group_id
        = f.select :group_id, Group.all.collect {|p| [p.name, p.id]}, {include_blank: false}
      .field
        = f.label :teacher_id
        = f.select "teacher_id", Teacher.all.collect {|p| [p.name, p.id]}, {include_blank: false}
      .field
        = f.label :info
        = f.text_field :info
      .actions
        = f.submit 'Save'
