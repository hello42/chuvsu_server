= form_for @subject do |f|
  - if @subject.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subject.errors.count, "error")} prohibited this subject from being saved:"
      %ul
        - @subject.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :star
    = f.number_field :star
  .field
    = f.label :teacher_id
    = f.number_field :teacher_id
  .field
    = f.label :info
    = f.text_field :info
  .actions
    = f.submit 'Save'
